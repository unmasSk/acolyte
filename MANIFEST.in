# Include all package data
include README.md
include LICENSE
include pyproject.toml

# Include configuration examples
recursive-include examples *.yaml *.yml *.example

# Include documentation
recursive-include docs *.md *.rst *.txt

# Include scripts (for reference, not execution)
recursive-include scripts *.py *.sh *.bat

# Include bin files (executables)
recursive-include bin *

# Include SQL schemas
recursive-include src *.sql

# Include test data
recursive-include tests *.py *.yaml *.yml *.json *.txt

# Exclude compiled files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .git
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .ruff_cache
global-exclude .coverage
global-exclude *.egg-info
