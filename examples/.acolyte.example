# ACOLYTE Configuration Example
# This file is NOT used - it's just for reference
# Actual configuration is stored in ~/.acolyte/projects/{project_id}/config.yaml

version: "1.0"

project:
  name: "my-awesome-project"
  path: "."
  description: "A web application built with Python and React"

# Model configuration
model:
  name: "qwen2.5-coder:3b"    # Model to use
  version_active: "3b"         # Active version
  context_size: 32768          # Total context window

# Dream System configuration  
dream:
  fatigue_threshold: 7.5       # When to suggest sleep
  emergency_threshold: 9.5     # Force sleep threshold
  cycle_duration_minutes: 5    # Duration of each dream cycle
  dream_folder_name: "dreams"  # Located in data/dreams/

# Service ports (ACOLYTE-specific range 42XXX)
ports:
  weaviate: 42080             # Vector database (default, was 8080)
  ollama: 42434               # LLM server (default, was 11434)
  backend: 42000              # ACOLYTE API (default, was 8000)

# Cache configuration
cache:
  max_size: 1000
  ttl_seconds: 3600

# RAG (Retrieval Augmented Generation) settings
rag:
  search:
    hybrid_alpha: 0.7         # 70% semantic, 30% lexical
    max_results: 20
  compression:
    enabled: true
    ratio: 0.7
    avg_chunk_tokens: 200
  indexing:
    batch_size: 100
    max_file_size_mb: 10

# Linting configuration (optional)
linting:
  python:
    linter: "ruff"
    formatter: "black"
  javascript:
    linter: "eslint"
    formatter: "prettier"

# Patterns to ignore during indexing
ignore:
  services:
    - "ollama/"
    - "weaviate/"
    - ".git/"
  cache:
    - "__pycache__/"
    - ".pytest_cache/"
    - ".mypy_cache/"
    - ".vscode/"
    - ".idea/"
  dependencies:
    python:
      - ".venv/"
      - "venv/"
      - "*.egg-info/"
    javascript:
      - "node_modules/"
      - "package-lock.json"
  compiled:
    - "*.pyc"
    - "*.pyo"
    - "*.so"
    - "*.dll"
  media:
    - "*.jpg"
    - "*.jpeg"
    - "*.png"
    - "*.mp4"
  custom:
    - "build/"
    - "dist/"
    - "*.log"

# Docker resource limits
docker:
  memory_limit: "8G"
  cpu_limit: "4"
  gpu_enabled: false
